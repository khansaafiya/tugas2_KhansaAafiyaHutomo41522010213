<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tbtampilanawal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/gunungbg"
        android:layout_marginTop="145dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kotaktampilanawal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/sdkjarikanan" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_19"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_12"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sdkjarikiri"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fotouser"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tekshadiahmenarik"
        android:layout_marginTop="700dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/garistiga"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80dp"/>


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="303dp"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:layout_marginTop="250dp">

            <androidx.cardview.widget.CardView
                android:layout_width="303dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparan">

                <ImageView
                    android:layout_width="303dp"
                    android:layout_height="180dp"
                    android:src="@drawable/botoltdksemuascroll" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="303dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparan">

                <ImageView
                    android:layout_width="303dp"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/scancodescroll" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="303dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparan">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/temanisegalascroll" />

            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </HorizontalScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:layout_marginTop="430dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="3dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:cardBackgroundColor="@color/transparan"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="388dp"
                    android:layout_height="244dp"
                    android:layout_margin="5dp"
                    android:background="@color/transparan"
                    android:elevation="0dp"
                    android:src="@drawable/kotakraisa" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tekstotaltutup"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="120dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tekstemukankode"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="70dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/teksraisa"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="60dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fotoraisa"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="65dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/teks30"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="260dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tekstutupbotol"
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="250dp"/>

                <Button
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:background="@drawable/button_shape"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="125dp"
                    android:backgroundTint="@color/biru"
                    android:id="@+id/scanbarcodee"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/barcode"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="255dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/scankode"
                    android:layout_marginTop="190dp"
                    android:layout_marginLeft="230dp"/>



            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vaganzafiesta"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/transparan"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="211dp"
                        android:layout_margin="5dp"
                        android:background="@color/transparan"
                        android:elevation="0dp"
                        android:src="@drawable/diskonhotel" />

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:backgroundTint="@color/biru"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="55dp"
                        android:id="@+id/buttonreedem"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tambah"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="64dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/angka1"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="68dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/kurang"
                        android:layout_marginTop="64dp"
                        android:layout_marginLeft="60dp"/>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/transparan"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="211dp"
                        android:layout_marginLeft="30dp"
                        android:background="@color/transparan"
                        android:elevation="0dp"
                        android:src="@drawable/cashback" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/transparan"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="211dp"
                        android:layout_margin="5dp"
                        android:background="@color/transparan"
                        android:elevation="0dp"
                        android:src="@drawable/foodvoucher"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/transparan"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"/>

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="211dp"
                    android:layout_marginLeft="30dp"
                    android:elevation="0dp"
                    android:src="@drawable/vouchergofood"
                    android:id="@+id/vouchergofood"/>

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bgbawah"/>





        </LinearLayout>
    </ScrollView>
</RelativeLayout>
